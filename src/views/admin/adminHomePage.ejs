                            cartContainer.innerHTML = "Đây là giỏ hàng"
                        }
                    </script>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <br>
    <div style="margin-top: 200px;">
            <h2 style="text-align: center; color: #fff;">List Of Products</h2>
            <a class="btn btn-outline-warning" style="margin-left: 154px; margin-bottom: 10px;" href="/admin/user">User Management</a>

            <a href="/admin/product/add" class="btn btn-outline-info" style="color: #fff; margin-left: 20%;">Add New Product</a>
    </div>
	<table style="text-align: center; margin-left: 12%;">
		<thead>
			<tr>
				<th style="text-align: center;">Image</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Discount</th>
				<th>Category</th>
				<th>Status</th>
				<th colspan="2" style="text-align: center;">Action</th>
			</tr>
		</thead>
		<tbody>
            <% productList.forEach(product=>{ %>
			<tr>
				<td><img src="<%= product.image %>" alt="" style="width: 150px; height: 150px;"></td>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.quantity %></td>
				<td><%= product.discount %></td>
				<td>
                    <%product.category.forEach(cate=>{%>
                        <%= cate.name%>
                        <br>
                    <%})%>
                </td>
                <td>
                    <%product.status.forEach(cate=>{%>
                        <%= cate.name%>
                        <br>
                    <%})%>
                </td>
                <div>
                    <td><a href="/admin/product/update/<%=product._id.toString()%>" class="btn btn-outline-warning">Update</a></td>
                    <td><a href="/admin/product/delete/<%=product._id.toString()%>" class="btn btn-outline-danger">Delete</a></td>
                </div>
			</tr>
            <% }) %>
		</tbody>
	</table>
</div>
<script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/custom.js"></script>
</body>
</html>
