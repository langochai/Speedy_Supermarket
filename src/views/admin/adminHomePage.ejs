  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</head>
<style>
    html,
body {
  height: 100%;
}
body {
  margin: 0;
  background: linear-gradient(45deg, #49a09d, #5f2c82);
  font-family: sans-serif;
  font-weight: 100;
}
.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
table {
  width: 800px;
  border-collapse: collapse;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}
th,
td {
  padding: 15px;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
}
th {
  text-align: left;
}
thead th {
  background-color: #55608f;
}

tbody td {
  position: relative;
}

</style>
<body>
<div class="container">
    <h2 style="text-align: center; color: #fff;">List Of Products</h2>
    <a href="/admin/product/add" style="color: #fff; margin-left: 43%;">Add New Product</a>
	<table style="text-align: center; margin-left: 5%;">
		<thead>
			<tr>
				<th style="text-align: center;">Image</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Discount</th>
				<th>Category</th>
				<th>Status</th>
				<th colspan="2" style="text-align: center;">Action</th>
			</tr>
		</thead>
		<tbody>
            <% productList.forEach(product=>{ %>
			<tr>
				<td><img src="<%= product.image %>" alt="" style="width: 150px; height: 150px;"></td>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.quantity %></td>
				<td><%= product.discount %></td>
				<td>
                    <%product.category.forEach(cate=>{%>
                        <%= cate.name%>
                        <br>
                    <%})%>
                </td>
                <td>
                    <%product.status.forEach(cate=>{%>
                        <%= cate.name%>
                        <br>
                    <%})%>
                </td>
                <div>
                    <td><a href="/admin/product/update/<%=product._id.toString()%>" class="btn btn-outline-warning">Update</a></td>
                    <td><a href="/admin/product/delete/<%=product._id.toString()%>" class="btn btn-outline-info">Delete</a></td>
                </div>
			</tr>
            <% }) %>
		</tbody>
	</table>
</div>  
</body>
</html>
